{
  "name": "scribe-valet",
  "version": "0.1.0",
  "description": "Local-first desktop voice utility runtime shell",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run build:renderer",
    "build:renderer": "esbuild src/renderer/index.tsx --bundle --platform=browser --format=iife --target=es2022 --outfile=dist/renderer/index.browser.js",
    "dev": "npm run build && electron .",
    "test": "vitest run",
    "check:no-localhost": "node scripts/runtime/no-localhost-check.mjs",
    "validate:runtime": "npm run build && npm run check:no-localhost"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "semver": "^7.7.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.7.1",
    "electron": "^40.0.0",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
